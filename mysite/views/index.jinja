			<script>
				const onHeaderImagesLoaded = () => {

					const pageRoot = document.querySelector('.filmlook')
					const header = document.querySelector('#section0')
					const images = Array.from(header.querySelectorAll('img, video'));

					const loadedImages = [...images.map(img => false)]

					const validate = () => {
						if (loadedImages.every(val => val)) {
							pageRoot.classList.add("loaded")
						}
					}

					images.forEach((img, idx) => {

						if (img.tagName === 'IMG') {
							loadedImages[idx] = img.complete;
							validate()

							img.onload = () => {
								loadedImages[idx] = true
								validate()
							}
						} else {
							loadedImages[idx] = Boolean(img.HAVE_FUTURE_DATA)
							validate();

							img.oncanplay = () => {
								loadedImages[idx] = true
								validate()
							};
						}


					})
				}
				onHeaderImagesLoaded();
			</script>
