<!DOCTYPE html>
<html lang="en">
{% include './components/head.jinja' %}

<body>
    {% include './components/nav.jinja' %}
    {# {% include './components/bundle-popup.jinja' %} #}

     {% set srcsetSizesDesktop = [
        1800,
        2560
     ] %}

    {% set srcsetSizesMobile = [
        320,
        640,
        960,
        1024
    ] %}

    {% set srcsetSizes = [
        [320, 320],
        [640, 640],
        [1280, 1280],
        [1800, 1800],
        [2560, 2560]
    ]%}

    {% set templateId = '1366' %}
    {% set refresh = 6 %}
    {% set mediaUrl = 'https://s3.motionvfx.com/mvfxpublic/products/templates/%s/media' % templateId %}

    {% set data = {
        'header': {
            'subtitle': 'Assorted Channel Openers for DaVinci Resolve'
        },
        'trailer': {
            'title': 'Watch trailer',
            'text': 'See these attention-grabbing intros in action and feel the impact they’d have on your channel’s look!'
        },
        'tutorial': {
            'subtitle': 'watch tutorial',
            'title': 'Improve your workflow',
            'text': 'Get to know the tips and tricks to maximize the benefits from using mIntro 2 DV!'
        },
        'promo': {
            'subtitle': 'Distinct and memorable visuals',
            'title': 'Define your channel',
            'text': 'Captivate the viewers, grab their attention and make them want to come back for more.'
        },
        'promo_grid': {
            'video': 'src',
            'video_2': 'src',
            'subtitle': 'Excellently crafted',
            'title': 'Motion design that attracts',
            'text': 'These ready-to-use visual presets will help you get your content on another level.',
        },
        'footer': {
            'subtitle': 'Improve the image',
            'title': 'All eyes on your content',
            'text': 'Revealing logotypes or animating typography to convey messages has never been this easy. You can use the spare time to polish every video to pure excellence.'
        }
    } %}

    <main>
        <section class="header bg--dark text-center">
            <div class="header__bg" style="opacity:0">
                <picture>
                    <source media="(max-width: 992px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/header_top_full-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    ">
                    <img
                        width="2560"
                        height="850"
                        src="{{mediaUrl}}/header_top_full-2560.jpg"
                        alt="Editor recording voiceover for video production"
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/header_top_full-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                </picture>
            </div>
            <div class="container-fluid">
                <div class="header__content section__text__content">
                    <div class="header__logo" style="--h-index: 0; opacity: 0">
                        <h1><span>mIntro</span> <span>3</span></h1>
                        {# <img src="{{'%s/mmorphcut_logo.png?%r' % (mediaUrl, refresh)}}" height="380" width="1200" alt=""> #}
                    </div>
                </div>
                <p class="header__subtitle" style="--h-index: 1; opacxity: 0">
                    {{data.header.subtitle}}
                </p>
                <img width="150" height="150" class="dvr" src="{{mediaUrl}}/dvr.png" alt="" srcset="" style="--h-index: 2; opacity: 0">
            </div>
        </section>

        <div class="scroll-prompt" style="--h-index: 2; opacity: 0">
            <a class="scroll-to-btn" href="#" onclick="scrollToAnchor('trailer');" tabindex="-1"></a>
        </div>

        <a class="nav" name="trailer"></a>

        {% set trailerUrl = 'https://www.youtube.com/embed/puOyNif8fUI?rel=0' %}

        <section class="video trailer">
            <div class="image__background">
                <picture>
                    <source media="(max-width: 992px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/trailer_bg-2560.jpg {{size}}w,
                        {% endfor %}
                    ">
                    <img
                        loading="lazy"
                        width="2560"
                        height="1050"
                        src="{{mediaUrl}}/trailer_bg-{{size}}.jpg"
                        alt="Editor recording voiceover for video production"
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/trailer_bg-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                </picture>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="section__head">
                            <h2 class="section__title">{{data.trailer.title}}</h2>
                            <p class="section__text">
                                {{data.trailer.text}}
                            </p>
                        </div>
                        <div class="yt embed-responsive embed-responsive-16by9 animated animated--fade--bottom">
                            <iframe loading="lazy" iframe src="{{trailerUrl}}"
                                frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="" title="Watch Trailer"
                                style="background-color: #000"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <a class="nav" name="tutorial"></a>

        {% set tutorialUrl = 'https://www.youtube.com/embed/OnmlG4NuH3Y?rel=0' %}

            <section class="video tutorial bg--light">
                <div class="image__background">
                    <picture>
                        <source media="(max-width: 992px)" srcset="
                            {% for size in srcsetSizesMobile %}
                                {{mediaUrl}}/tutorial_bg-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        ">
                        <img
                            src="{{mediaUrl}}/tutorial_bg-2560.jpg"
                            alt="Editor recording voiceover for video production"
                            srcset="
                                {% for size in srcsetSizesDesktop %}
                                    {{mediaUrl}}/tutorial_bg-{{size}}.jpg {{size}}w,
                                {% endfor %}
                            "
                            sizes="100vw">
                    </picture>
                </div>
                <div class="container text-center">
                    <div class="row">
                        <div class="col">
                            <div class="section__head">
                                <h2 class="section__subtitle">{{data.tutorial.subtitle}}</h2>
                                <h2 class="section__title">{{data.tutorial.title}}</h2>
                                <p class="section__text">{{data.tutorial.text}}</p>
                            </div>
                            <div class="yt embed-responsive embed-responsive-16by9 animated animated--fade--bottom">
                                <iframe loading="lazy" src="{{tutorialUrl}}" frameborder="0"
                                    allow="autoplay; encrypted-media" allowfullscreen="" title="Watch Tutorial"
                                    style="background-color: #000"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        <section class="promo">
            <div class="secuence" style="--s-index: 0; opacity: 0;">
                <div id="demo" class="carousel slide carousel-fade">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="comp-1 secuence" style="--s-index: 0; opacity: 0;" src="{{mediaUrl}}/digital_shot.png" alt="">
                            <picture>
                                <source media="(max-width: 640px)" srcset="
                                    {{mediaUrl}}/slider_1_mobile-640.jpg 640w,
                                    {{mediaUrl}}/slider_1_mobile-320.jpg 320w,
                                ">
                                <source media="(max-width: 992px)" srcset="
                                    {% for size in srcsetSizesMobile %}
                                        {{mediaUrl}}/slider_1-{{size}}.jpg {{size}}w,
                                    {% endfor %}
                                ">
                                <img
                                    width="2560"
                                    height="1050"
                                    src="{{mediaUrl}}/slider_1-2560.jpg"
                                    alt="Editor recording voiceover for video production"
                                    srcset="
                                        {% for size in srcsetSizesDesktop %}
                                            {{mediaUrl}}/slider_1-{{size}}.jpg {{size}}w,
                                        {% endfor %}
                                    "
                                    sizes="100vw">
                            </picture>
                        </div>
                        <div class="carousel-item">
                            <img class="comp-1 secuence" style="--s-index: 0; opacity: 0;" src="{{mediaUrl}}/tech_box.png" alt="">
                            <picture>
                                <source media="(max-width: 640px)" srcset="
                                    {{mediaUrl}}/slider_2_mobile-640.jpg 640w,
                                    {{mediaUrl}}/slider_2_mobile-320.jpg 320w,
                                ">
                                <source media="(max-width: 992px)" srcset="
                                    {% for size in srcsetSizesMobile %}
                                        {{mediaUrl}}/slider_2-{{size}}.jpg {{size}}w,
                                    {% endfor %}
                                ">
                                <img
                                    width="2560"
                                    height="1050"
                                    src="{{mediaUrl}}/slider_2-2560.jpg"
                                    alt="Editor recording voiceover for video production"
                                    srcset="
                                        {% for size in srcsetSizesDesktop %}
                                            {{mediaUrl}}/slider_2-{{size}}.jpg {{size}}w,
                                        {% endfor %}
                                    "
                                    sizes="100vw">
                            </picture>
                        </div>
                        <div class="carousel-item">
                            <img class="comp-1 secuence" style="--s-index: 0; opacity: 0;" src="{{mediaUrl}}/logo_3.png" alt="">
                            <picture>
                                <source media="(max-width: 640px)" srcset="
                                    {{mediaUrl}}/slider_3_mobile-640.jpg 640w,
                                    {{mediaUrl}}/slider_3_mobile-320.jpg 320w,
                                ">
                                <source media="(max-width: 992px)" srcset="
                                    {% for size in srcsetSizesMobile %}
                                        {{mediaUrl}}/slider_3-{{size}}.jpg {{size}}w,
                                    {% endfor %}
                                ">
                                <img
                                    width="2560"
                                    height="1050"
                                    src="{{mediaUrl}}/slider_3-2560.jpg"
                                    alt="Editor recording voiceover for video production"
                                    srcset="
                                        {% for size in srcsetSizesDesktop %}
                                            {{mediaUrl}}/slider_3-{{size}}.jpg {{size}}w,
                                        {% endfor %}
                                    "
                                    sizes="100vw">
                            </picture>
                        </div>
                    </div>
                    <ol class="carousel-indicators">
                        {% for number in range(1,4) %}
                            <li data-target="#demo" data-slide-to="{loop.index}" class="{% if loop.index == 1 %}active{% endif %}"></li>
                        {% endfor %}
                    </ol>
                </div>
            </div>
            <div class="section__content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="section__head">
                                <p class="section__subtitle secuence" style="--s-index: 2; opacity: 0;">{{data.promo.subtitle}}</p>
                                <h2 class="section__title secuence" style="--s-index: 3; opacity: 0;">{{data.promo.title}}</h2>
                                <p class="section__text secuence" style="--s-index: 4; opacity: 0;">{{data.promo.text}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="promo-grid">
            <video height="1000" width="1280" loading="lazy" class="promo-1 secuence" src="{{mediaUrl}}/web_mov.mp4" alt="" srcset="" style="--s-index: 0; opacity: 0;" loop autoplay muted playsinline></video>
            <div class="promo-2 secuence section__head" style="--s-index: 1; opacity: 0;">
                <p class="section__subtitle">{{data.promo_grid.title}}</p>
                <h2 class="section__title">{{data.promo_grid.subtitle}}</h2>
                <p class="section__text">{{data.promo_grid.text}}</p>
            </div>
            <div id="demo1" class="carousel slide carousel-fade promo-3 secuence" style="--s-index: 3; opacity: 0;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img
                            width="640"
                            height="1000" src="{{mediaUrl}}/grid_tall-2-640.jpg" alt=""
                            srcset="
                                {{mediaUrl}}/grid_tall-2-640.jpg 1200w,
                                {{mediaUrl}}/grid_tall-2-320.jpg 640w,
                            ">
                    </div>
                    <div class="carousel-item">
                        <img
                            width="640"
                            height="1000" src="{{mediaUrl}}/grid_tall_2-640.jpg" alt=""
                            srcset="
                                {{mediaUrl}}/grid_tall_2-640.jpg 1200w,
                                {{mediaUrl}}/grid_tall_2-320.jpg 640w,
                            ">
                    </div>
                </div>
            </div>
            <div id="demo2" class="carousel slide carousel-fade promo-4 secuence" style="--s-index: 2; opacity: 0;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img
                            width="640"
                            height="1000" class="" src="{{mediaUrl}}/grid_small-640.jpg" alt=""
                            srcset="
                                {{mediaUrl}}/grid_small-640.jpg 1200w,
                                {{mediaUrl}}/grid_small-320.jpg 640w,
                            ">
                    </div>
                    <div class="carousel-item">
                        <img
                            width="640"
                            height="1000" class="" src="{{mediaUrl}}/grid_small_2-640.jpg" alt=""
                            srcset="
                                {{mediaUrl}}/grid_small_2-640.jpg 1200w,
                                {{mediaUrl}}/grid_small_2-320.jpg 640w,
                            ">
                    </div>
                </div>
            </div>
            
        </section>

        <section class="prevs center">
            {% set productPageTemplateId = '1366' %} 
            {% set collapseAfter = 8 %}
            {% set namePrefix = '' %}
            {% set categories = [
                    { 'key':'Intro', 'label': 'Intros', 'count': 30},
                    { 'key':'Add-on', 'label': 'Add-ons', 'count': 10},
                    { 'key':'Typography', 'label': 'Typography', 'count': 5},
                    { 'key':'Background', 'label': 'Backgrounds', 'count': 10},
                ]
            %}

            <div class="image__background">
                <picture>
                    <source media="(max-width: 992px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/presets_bg-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    ">
                    <img
                        loading="lazy"
                        src="{{'%s/presets_bg-2560.jpg?%r' % (mediaUrl, refresh)}}"
                        alt="Editor recording voiceover for video production"
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/presets_bg-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                </picture>
            </div>
            
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="lines__comp">
                            <video loading="lazy" src="{{mediaUrl}}/presets_amount.mp4" loop autoplay muted playsinline></video>
                            <div class="section__head">
                                <p class="section__display">55</p>
                                <h2 class="section__title">
                                    astounding presets
                                </h2>
                                <p class="section__subtitle">
                                    hover or tap to preview animations
                                </p>
                            </div>
                            <div class="lines__wrapper">
                                <div class="lines">
                                    <div class="lines-v"></div>
                                    <div class="lines-h"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="product-prev-grid" class="product-prev-grid container">
    			{% for category in categories %}
					{% set key = category.key %}
					{% if categories|length > 1 %}
                        <h3 class="{{ 'left' if loop.index % 2 != 0 else 'right' }}">{{ category.label }}
                        </h3>
                    {% endif %}
					<div class="row {{ category.rowClass | default('') }} {% if category.count == 5 %}row-5{% endif %}">
                        {% if key == 'Movement' %}
                            <picture>
                                <img loading="lazy" class="deco__img palm-addon" src="{{'%s/palm_addon.png?%r' % (mediaUrl, refresh)}}" alt="" srcset="">
                            </picture>
                        {% endif %}
                        {% if key == 'Overlay' %}
                            <picture>
                                <img loading="lazy" class="deco__img sphere-grid" src="{{'%s/sphere_grid.jpg?%r' % (mediaUrl, refresh)}}" alt="" srcset="">
                            </picture>
                        {% endif %}
						{% for i in range(category.count) %}
							{% set num = '%02d' % loop.index %}
                            {# https://s3.motionvfx.com/mvfxpublic/products/templates/1297/media/Background_{{num}}.mp4 #}
                            {# https://s3.motionvfx.com/mvfxpublic/products/templates/1297/media/mIntro_2_04.mp4 #}
							{% set filename = 'https://s3.motionvfx.com/mvfxpublic/products/templates/' + productPageTemplateId + '/media/' + namePrefix + key +  '_' + num %}
							<div class="product-prev-col col-6 col-lg-3 {% if loop.index > collapseAfter %}collapse prev-collapse-{{ key }}{% endif %}" id="prev-collapse-{{ key }}-{{ loop.index }}"
								>
								<div class="product-prev-cell" data-mp4-src="{{ filename }}.mp4?{{refresh}}">
									<img loading="lazy" src="{{ filename }}.jpg?{{refresh}}" alt="" width="400" height="225" />
									<div class="loading-spinner"></div>
								</div>
							</div>
						{% endfor %}
						{% if category.count > collapseAfter %}
							<div class="col-btn-collapse">
								<button class="btn-collapse" type="button" data-target=".prev-collapse-{{ key }}" aria-expanded="false" aria-controls="{% for j in range(collapseAfter, category.count) %} prev-collapse-{{ key }}-{{ j }} {% endfor %}">
									<span><span class="label-collapsed">Show more</span><span class="label-expanded">Collapse</span> ({{ category.count - collapseAfter }})</span>
									<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
											viewBox="0 0 36.6 61.5" style="enable-background:new 0 0 36.6 61.5;" xml:space="preserve" class="btn-collapse-arrow" height="20">
										<style type="text/css">
											.st0{fill:none;stroke:currentColor;stroke-width:8;stroke-miterlimit:10;}
										</style>
										<polyline class="st0" points="2.8,58.6 30.9,30.5 3.2,2.8 "/>
									</svg>
								</button>
							</div>
						{% endif %}
					</div>
				{% endfor %}
                
			</div>
        </section>

        <a class="nav" href="#" name="specs" rel="noopener noreferrer"></a>
        <div class="ts-mi">
            <div class="image__background">
                <picture>
                    <source media="(max-width: 992px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/tech_spec-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    ">
                    <img
                        src="{{'%s/tech_spec.jpg-2500?%r' % (mediaUrl, refresh)}}"
                        alt="Editor recording voiceover for video production"
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/tech_spec-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                </picture>
            </div>
        <section class="tech-spec bg--light">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="tech-spec-info">
                            <div class="section__text__content">
                                <div class="section__head">
                                    <h2 class="section__title tech-spec__title section__title">Technical specifications</h2>
                                </div>
                                <div class="ttable tech-spec__table">
                                    <div class="tcell tlabel">Supported software</div>
                                    <div class="tcell tdata">
                                        {% autoescape off %}
                                            {{ product.productdetails.minimal_requirements.replace('FCP 10', 'FCP 10').replace('Motion 5', 'Motion 5').replace(', ', ',<br>') }}
                                        {% endautoescape %}
                                    </div>
                                    {# <div class="tcell tlabel">Includes</div>
                                    <div class="tcell tdata"></div> #}
                                    <div class="tcell tlabel">Size</div>
                                    <div class="tcell tdata">
                                        {{ "%.1f MB"|format(product.productdetails.source_size / 1000) }}
                                    </div>
                                    {# {% for kind in ['trailer', 'tutorial'] %}
                                        {% with musics = product
                                            .productdetails
                                            .music
                                            .select_related('music_portal')
                                            .all()
                                            .filter(used_in_trailer = kind == 'trailer')
                                        %}
                                        {% if length(musics) %}
                                            <div class="tcell tlabel">Music used in {{ kind }}</div>
                                            <div class="tcell tdata">
                                            {% for music in musics %}
                                                {% if music.music_portal.name == "www.premiumbeat.com" or music.music_portal.name == "www.shutterstock.com" %}
                                                    <a href="{{ music.url }}" target="_blank" rel="noopener noreferrer">{{music.music_portal.name.replace('www.','') }} — {{ music.title }}</a>
                                                    {% if not loop.last %},&nbsp;<wbr>{% endif %}
                                                {% else %}
                                                    {{ music.music_portal.name.replace('www.','') }} — {{ music.title }}
                                                    {% if not loop.last %},&nbsp;<wbr>{% endif %}
                                                {%endif%}
                                            {%endfor%}
                                            </div>
                                        {% endif %}
                                        {% endwith %}
                                    {% endfor %} #}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>

        <section class="minstaller__section bg--light">

            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="minstaller">
                            <h3 class="minstaller__title">mInstaller</h3>
                            <p class="minstaller__description">
                                After purchasing, the product is
                                <b>instantly available </b>for download via
                                <a href="https://www.motionvfx.com/page/minstaller.html" target="_blank"
                                    rel="noopener noreferrer">mInstaller</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </div>

        <footer class="footer">
            <div class="image__background">
                <picture>
                    <source media="(max-width: 640px)" srcset="
                        {{mediaUrl}}/footer_mobile-640.jpg 640w,
                        {{mediaUrl}}/footer_mobile-320.jpg 320w,
                    ">
                    <source media="(max-width: 992px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/footer-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    ">
                    <img
                        loading="lazy"
                        width="2560"
                        height="850"
                        src="{{'%s/mmorphcut_header-2560.jpg?%r' % (mediaUrl, refresh)}}"
                        alt="Editor recording voiceover for video production"
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/footer-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                </picture>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="footer__content section__text__content">
                            <div class="section__head">
                                <h2 class="section__subtitle">{{ data.footer.subtitle }}</h2>
                                <h2 class="footer__title section__title">{{ data.footer.title }}</h2>
                                <p class="footer__text section__text">{{ data.footer.text }}</p>
                            </div>
                            <div class="button-buy">
                                {% with discount_text="INTRO", version=2 %}
                                    {% include "product/buy_button.jinja2" %}
                                {% endwith %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    {% include './components/submenu.jinja' %}

    <script src="dist/scripts.js"></script>
</body>

</html>
