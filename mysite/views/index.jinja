<!DOCTYPE html>
<html lang="en">
{% include './components/head.jinja' %}

<body>
    {% include './components/nav.jinja' %}
    {# {% include './components/bundle-popup.jinja' %} #}

    {% set srcsetSizesMobile = [
        640,
        860,
        960,
        1024,
    ] %}

    {% set srcsetSizesDesktop = [
        1280,  
        1600,
        1920,
        2560
     ] %}


    {% set templateId = '1378' %}
    {% set refresh = 6 %}
    {% set mediaUrl = 'https://s3.motionvfx.com/mvfxpublic/products/templates/%s/media' % templateId %}

    {% set data = {
        'header': {
            'subtitle': 'Powerful Typography Presets for DaVinci Resolve'
        },
        'trailer': {
            'title': 'EXPERIENCE THE ACTION',
            'text': 'See the powerful impact this plugin has on your shots and feel the hype build up!'
        },
        'tutorial': {
            'title': 'GRASP THE KNOW-HOW, PERFECT YOUR WORKFLOW',
            'text': 'Watch the tutorial and get some useful tricks to make your edits better in no time!'
        },
        'presets': {
            'title': 'DIVERSE PRESETS',
            'text': 'With over 60 assets, including titles, backgrounds, and add-ons, youâ€™ll find exactly what you need for any project.',
            'title2': 'DATABENDING-INSPIRED VIDEO TRANSITIONS <b>DESIGN</b> TRENDY GLITCHY GRAPHICS',
            'text2': 'mTitle Hype DV is sleek, intuitive, and easy to use, making it perfect for video editors, marketers, and creatives alike.'
        },
        'footer': {
            'title': 'PUT YOUR MESSAGE ACROSS',
            'text': 'Give any edit a dose of dynamism and speak to your audience with modern typographical design. The end result is a package that sells itself.'
        }
    } %}

    {% set placeholder = 'https://via.placeholder.com' %}

    <style>
        .section__title {
            opacity: 0;
        }
    </style>

    {# <div hidden>
        <svg id="arrow" class="arrow" width="100" height="100" viewBox="-5 -5 110 132" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M56.1584 61.3374L56.4671 61L56.1584 60.6626L1.13487 0.5H43.9902L99.3224 61L43.9902 121.5H1.13487L56.1584 61.3374Z" fill="#fff"/>
        </svg>
        <svg id="circle" class="circle" width="100" height="100" viewBox="-5 -5 140 140" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="65" cy="65" r="64.5" fill="#fff"/>
        </svg>
        <svg id="crossEmpty" width="100" class="cross-empty" height="100" viewBox="-5 -5 110 110" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M62 0H38V38H0V62H38V100H62V62H100V38H62V0Z" fill="#fff"/>
        </svg>
        <svg id="cross" width="100" height="100" class="cross" viewBox="-5 -5 110 110" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M62 0H38V38H0V62H38V100H62V62H100V38H62V0Z" fill="#fff"/>
        </svg>
    </div> #}

    <main>
        <section class="header text-center">
            <div class="header__bg" style="opacity:0">
                {# <canvas id="canv"></canvas> #}
                <picture>
                    <source media="(max-width: 512px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/mTitleHype_top-{{size}}.webp {{size}}w,
                        {% endfor %}
                    "
                    type="image/webp">
                    <source media="(max-width: 512px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/mTitleHype_top-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    "
                    type="image/jpeg">
                    <source srcset="
                        {% for size in srcsetSizesDesktop %}
                            {{mediaUrl}}/mTitleHype_top-{{size}}.webp {{size}}w,
                        {% endfor %}
                    "
                    type="image/webp">
                    <img
                        loading="lazy"
                        width="2560"
                        height="1250"
                        src="{{mediaUrl}}/mTitleHype_top-2560.jpg"
                        {# src="{{placeholder}}/2560x860" #}
                        alt=""
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/mTitleHype_top-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                    {# <img
                        width="2560"
                        height="1100"
                        src="https://via.placeholder.com/2560x1100"
                        sizes="100vw"> #}
                </picture>
            </div>
            <div class="container-fluid">
                <div class="header__content section__text__content">
                    <div class="header__logo" style="--h-index: 0; opacity: 0" >
                        <video class="d-none d-md-block" autoplay muted playsinline src="{{mediaUrl}}/mTitleHype_logo.mp4" width="622" height="350"></video>
                        <img class="d-md-none" src="{{mediaUrl}}/mTitleHype_logo.jpg" alt="mTitleHype logo" width="444" height="205">
                        <h1 class="header__title" hidden>
                            {{product.head_info}}
                        </h1>
                    </div>
                </div>
                <h2 class="header__subtitle section__text" style="--h-index: 4; opacity: 0">
                    {{data.header.subtitle}}
                </h2>
            </div>

            {# <div class="header__deco secuence" style="--h-index: 5; opacity: 0">
                <img class="secuence" src="https://s3.motionvfx.com/mvfxpublic/software/fcp_color_icon.png" width="35" alt="" style="--h-index: 5; opacity: 0">
                &
                <img class="secuence" src="https://s3.motionvfx.com/mvfxpublic/software/DV_color_icon.png" width="50" height="50" alt="" style="--h-index: 6; opacity: 0">
            </div> #}

        </section>

        <div class="scroll-prompt" style="--h-index: 2; opacity: 0">
            <a class="scroll-to-btn" href="#" onclick="scrollToAnchor('trailer');" tabindex="-1"></a>
        </div>

        {# <svg width="100" height="100" class="cross" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <use href="#arrow" />
        </svg> #}


        <a class="nav" name="trailer"></a>

        {% set trailerUrl = 'https://www.youtube.com/embed/puOyNif8fUI?rel=0' %}

        <section class="video trailer">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="section__content">
                            <div class="section__head">
                                {# <p class="section__subtitle secuence" style="--s-index:0; opacity: 0;">
                                    {{data.trailer.subtitle}}
                                </p> #}
                                <div class="section__title">
                                    {{data.trailer.title}}
                                </div>
                                <p class="section__text secuence" style="--s-index:2; opacity: 0;">
                                    {{data.trailer.text}}
                                </p>
                            </div>
                        </div>
                        <div class="yt embed-responsive embed-responsive-16by9 animated animated--fade--bottom">
                            <iframe loading="lazy" iframe src="{{trailerUrl}}"
                                frameborder="0" allow="autoplay; encrypted-media" allowfullscreen="" title="Watch Trailer"
                                style="background-color: #000"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <a class="nav" name="tutorial"></a>

        {% set tutorialUrl1 = 'https://www.youtube.com/embed/OnmlG4NuH3Y?rel=0' %}

        <section class="video tutorial">
            <div class="container text-center">
                <div class="row">
                    <div class="col-12">
                        <div class="section__content">
                            <div class="section__head">
                                {# <p class="section__subtitle secuence" style="--s-index:0; opacity: 0">
                                    {{data.tutorial.subtitle}}
                                </p> #}
                                <div class="section__title">
                                    {{data.tutorial.title}}
                                </div>
                                <p class="section__text secuence" style="--s-index:2; opacity: 0">
                                    {{data.tutorial.text}}
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="yt embed-responsive embed-responsive-16by9 animated animated--fade--bottom">
                            <iframe loading="lazy" src="{{tutorialUrl1}}" frameborder="0"
                                allow="autoplay; encrypted-media" allowfullscreen="" title="Watch Tutorial"
                                style="background-color: #000"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container center academy-link">
                Get more tips & tricks for DaVinci Resolve at <a target="_blank" href="https://www.motionvfx.com/page/davinci-resolve.html#tutorial">MotionVFX Academy</a>
            </div>
        </section>

        <section class="prevs center">
            {% set productPageTemplateId = templateId %} 
            {% set collapseAfter = 8 %}
            {% set namePrefix = '' %}
            {% set categories = [
                    { 'key':'Hype', 'label': 'Hype', 'count': 50},
                    { 'key':'Add_on', 'label': 'Addons', 'count': 6},
                    { 'key':'Background', 'label': 'Backgrounds', 'count': 6},
                ]
            %}
            {% set presets_count = '60+' %}

            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="section__display">
                            {{presets_count}}
                        </div>
                        <div class="section__head">
                            {# <div class="video__wrapper"> #}
                                {# <video autoplay muted playsinline loading="lazy" src="{{mediaUrl}}/20.mp4"></video> #}
                            {# </div> #}
                            
                            <div class="section__title">
                                {{data.presets.title}}
                            </div>
                            <h2 class="section__text">
                                {{data.presets.text}}
                            </h2>
                            {# <p class="section__subtitle">
                                hover or tap to preview animations
                            </p> #}
                        </div>
                    </div>
                </div>
            </div>

            <div id="product-prev-grid" class="product-prev-grid container">
                <div class="row">
    			{% for category in categories %}
					{% set key = category.key %}
					<!--<div class="row {#{{ category.rowClass | default('') }}#} {#{% if category.count == 5 %}row-5{% endif %}#}">-->
                        {% if categories|length > 1 %}
                        {# {% if key == 'LUT_Presets' or key == 'Background' %}col-6{% else%}col-12{% endif %} #}
                            <div class="{% if key == 'LUT_Presets' %}col-12 col-sm-6 col-lg-3{% else%}col-12{% endif %}">
                                <div class="{{ 'left' if loop.index % 2 != 0 else 'left' }}">{{ category.label }}</h3>
                                <div class="row">
                                {% for i in range(category.count) %}
                                    {% set num = '%02d' % loop.index %}
                                    {% set filename = 'https://s3.motionvfx.com/mvfxpublic/products/templates/' + productPageTemplateId + '/media/mTitle_' + key + '_' + num %}
                                    <div class="product-prev-col col-6 col-lg-3 {% if loop.index > collapseAfter %}collapse prev-collapse-{{ key }}{% endif %}"
                                        id="prev-collapse-{{ num }}-{{ loop.index }}"
                                    >
                                        <div class="product-prev-cell" data-mp4-src="{{ filename }}.mp4?{{refresh}}">
                                            <img loading="lazy" src="{{ filename }}.jpg?{{refresh}}" alt="{{ num}}" width="400" height="225"/>
                                            <div class="loading-spinner"></div>
                                        </div>
                                    </div>
                                {% endfor %}
                                {% if category.count > collapseAfter %}
                                    <div class="col-btn-collapse">
                                        <button class="btn-collapse" type="button" data-target=".prev-collapse-{{ key }}" aria-expanded="false" aria-controls="{% for j in range(collapseAfter, category.count) %} prev-collapse-{{ key }}-{{ j }} {% endfor %}">
                                            <span><span class="label-collapsed">Show more</span><span class="label-expanded">Collapse</span> ({{ category.count - collapseAfter }})</span>
                                            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                                    viewBox="0 0 36.6 61.5" style="enable-background:new 0 0 36.6 61.5;" xml:space="preserve" class="btn-collapse-arrow" height="20">
                                                <style type="text/css">
                                                    .st0{fill:none;stroke:currentColor;stroke-width:8;stroke-miterlimit:10;}
                                                </style>
                                                <polyline class="st0" points="2.8,58.6 30.9,30.5 3.2,2.8 "/>
                                            </svg>
                                        </button>
                                    </div>
                                {% endif %}
                                </div>
                            </div>
                        {% endif %}
                        {#{% for key in range(0, 19) %}#}

					<!--</div>-->
                {% endfor %}
                </div>
			</div>
            <div class="prevs__bottom">
                <div class="image__background--static">
                    <picture>
                        {# <source media="(max-width: 512px)" srcset="
                            {% for size in srcsetSizesMobile %}
                                {{mediaUrl}}/mmatrix_underprev-m_{{size}}.webp {{size}}w,
                            {% endfor %}
                        "
                        type="image/webp"> #}
                        <source media="(max-width: 600px)" srcset="
                            {{mediaUrl}}/mTitleHype_underprev-m_1024-raw.jpg 600w,
                            {# {% for size in srcsetSizesMobile %}
                                {{mediaUrl}}/mTitleHype_underprev-{{size}}.jpg {{size}}w,
                            {% endfor %} #}
                        "
                        type="image/jpeg">
                        <source srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/mTitleHype_underprev-{{size}}.webp {{size}}w,
                            {% endfor %}
                        "
                        type="image/webp">
                        <img
                            loading="lazy"
                            width="2560"
                            height="1250"
                            src="{{mediaUrl}}/mTitleHype_underprev-2560.jpg"
                            {# src="{{placeholder}}/2560x1200" #}
                            alt=""
                            {# srcset="
                                {% for size in srcsetSizesDesktop %}
                                    {{mediaUrl}}/mmatrix_underprev-{{size}}.jpg {{size}}w,
                                {% endfor %}
                            " #}
                            sizes="100vw">
                        {# <img
                            width="2560"
                            height="1100"
                            src="https://via.placeholder.com/2560x1100"
                            sizes="100vw"> #}
                    </picture>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="section__content">
                                <div class="section__head">
                                    <div class="section__title">
                                        {% autoescape off %}{{data.presets.title2}}{% endautoescape %}
                                    </div>
                                    <h2 class="section__text">
                                        {{data.presets.text2}}
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <a class="nav" href="#" name="specs" rel="noopener noreferrer"></a>
        <div class="ts-mi bg--dark">

            <section class="tech-spec">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="tech-spec-info">
                                <div class="section__text__content">
                                    <div class="section__head">
                                        <div class="section__title tech-spec__title section__title">
                                            Technical specifications
                                        </div>
                                    </div>
                                    <div class="ttable tech-spec__table">
                                        <div class="tcell tlabel">Supported software</div>
                                        <div class="tcell tdata">
                                            <h3 class="section__text">
                                                {% autoescape off %}
                                                    {{ product.productdetails.minimal_requirements.replace('FCP 10', 'FCPÂ 10').replace('Motion 5', 'MotionÂ 5').replace(', ', ',<br>') }}
                                                {% endautoescape %}
                                            </h3>
                                        </div>
                                        <div class="tcell tlabel">Includes</div>
                                        <div class="tcell tdata">
                                            <h3 class="section__text">
                                                <span>Background (1), Effects (6), LUT Presets (1), Transitions (5), Typography (4)</span></div>
                                            </h3>
                                        <div class="tcell tlabel">Size</div>
                                        <div class="tcell tdata">
                                            {{ "%.1f MB"|format(product.productdetails.source_size / 1000) }}
                                        </div>
                                        {# {% for kind in ['trailer', 'tutorial'] %}
                                            {% with musics = product
                                                .productdetails
                                                .music
                                                .select_related('music_portal')
                                                .all()
                                                .filter(used_in_trailer = kind == 'trailer')
                                            %}
                                            {% if length(musics) %}
                                                <div class="tcell tlabel">Music used in {{ kind }}</div>
                                                <div class="tcell tdata">
                                                {% for music in musics %}
                                                    {% if music.music_portal.name == "www.premiumbeat.com" or music.music_portal.name == "www.shutterstock.com" %}
                                                        <a href="{{ music.url }}" target="_blank" rel="noopener noreferrer">{{music.music_portal.name.replace('www.','') }} â€” {{ music.title }}</a>
                                                        {% if not loop.last %},&nbsp;<wbr>{% endif %}
                                                    {% else %}
                                                        {{ music.music_portal.name.replace('www.','') }} â€” {{ music.title }}
                                                        {% if not loop.last %},&nbsp;<wbr>{% endif %}
                                                    {%endif%}
                                                {%endfor%}
                                                </div>
                                            {% endif %}
                                            {% endwith %}
                                        {% endfor %} #}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>

            <section class="minstaller__section">

                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="minstaller">
                                <div class="minstaller__title">mInstaller</div>
                                <p class="minstaller__description">
                                    After purchasing, the product is
                                    <b>instantly available </b>for download via
                                    <a href="https://www.motionvfx.com/page/minstaller.html" target="_blank"
                                        rel="noopener noreferrer">mInstaller</a>.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>

        <footer class="footer">
            <div class="image__background--static">
                <picture>
                    <source media="(max-width: 512px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/mTitleHype_footer-{{size}}.webp {{size}}w,
                        {% endfor %}
                    "
                    type="image/webp">
                    <source media="(max-width: 512px)" srcset="
                        {% for size in srcsetSizesMobile %}
                            {{mediaUrl}}/mTitleHype_footer-{{size}}.jpg {{size}}w,
                        {% endfor %}
                    "
                    type="image/jpeg">
                    <source srcset="
                        {% for size in srcsetSizesDesktop %}
                            {{mediaUrl}}/mTitleHype_footer-{{size}}.webp {{size}}w,
                        {% endfor %}
                    "
                    type="image/webp">
                    <img
                        loading="lazy"
                        width="2560"
                        height="1100"
                        src="{{mediaUrl}}/mTitleHype_footer-2560.jpg"
                        {# src="{{placeholder}}/2560x960" #}
                        alt=""
                        srcset="
                            {% for size in srcsetSizesDesktop %}
                                {{mediaUrl}}/mTitleHype_footer-{{size}}.jpg {{size}}w,
                            {% endfor %}
                        "
                        sizes="100vw">
                    {# <img
                        width="2560"
                        height="1100"
                        src="https://via.placeholder.com/2560x1100"
                        sizes="100vw"> #}
                </picture>
            </div>
            <div class="section__content footer__content">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="section__text__content">
                                <div class="section__head">
                                    {# <p class="section__subtitle">{{ data.footer.subtitle }}</p> #}
                                    <div class="footer__title section__title">
                                        {{data.footer.title}}
                                    </div>
                                    <p class="footer__text section__text secuence" style="--s-index:0; opacity: 0">
                                        {{ data.footer.text }}
                                    </p>
                                </div>
                                <div class="button-buy">
                                    {% with discount_text="INTRO", version=2 %}
                                        {% include "product/buy_button.jinja2" %}
                                    {% endwith %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    {% include './components/submenu.jinja' %}

    <script src="dist/scripts.js"></script>
</body>

</html>
