<div class="submenu-plugins show" id="submenu-plugins" style="z-index: 90">
    <div class="submenu-plugins-left-arrow" onclick="clickOnMenuArrow()">
        <img src="https://s3.motionvfx.com/mvfxpublic/products/templates/1227/media/arrow_submenu_left.svg"
            loading="lazy"
            width="300"
            height="150",
            alt="Unfold icon"
        />
    </div>
    {% set links = [
        {
            'anchor': 'tutorial',
            'class': 'tutorial',
            'title': 'Watch tutorial',
            'src': 'play_menu.svg',
        },
        {
            'anchor': 'specs',
            'class': 'tech-sec',
            'title': 'Technical Specifications',
            'src': 'play_menu.svg',
        }
    ] %}
    <div class="submenu-plugins-left">
        {% for link in links %}
            <a id="{{link.class}}-menu" role="button" onclick="clickOnMenuItem('{{link.anchor}}');">{{link.title}}
                <img loading="lazy"
                    src="https://s3.motionvfx.com/mvfxpublic/products/templates/1227/media/{{link.src}}"
                    width="12"
                    height="12"
                    alt="{{link.title}} icon"
                />
            </a>
        {% endfor %}
    </div>
    <div class="submenu-plugins-right">
        {# {{ bundle.set_btn_title("Essential Bundle")|default("", True) }} #}
        {# {{ plugin.set_btn_title("Plugin Only")|default("", True) }}
        {{ titles.set_btn_title("Titles Pack")|default("", True) }}
        {{ captions.set_btn_title("Captions Pack")|default("", True) }}
        {{ pointers.set_btn_title("Pointers Pack")|default("", True) }} #}

        {# {% set products = [plugin, titles, captions, pointers] %} #}

        {% with discount_text='INTRO', version=4, products=products %}
            {% include 'product/buy_button.jinja2' %}
        {% endwith %}
        <div class="bundle-info">
            Get the <span>BUNDLE</span> and save money!
        </div>
        {# {% with discount_text='INTRO', version=1 %}
            {% include 'product/buy_button.jinja2' %}
        {% endwith %} #}
    </div>
</div>
